<!--            app:group_has_header="false"-->
<!--            app:group_height="42dp"-->
<!--            app:group_padding_left="16dp"-->
<!--            app:group_padding_right="16dp"-->
<!--            app:group_text_color="#555555"-->
<!--            app:group_text_size="14sp" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schedule_recycler_view">

        </androidx.recyclerview.widget.RecyclerView>


    </edu.zjut.androiddeveloper_8.calendarview.CalendarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/add_schedule_background"
        android:src="@drawable/ic_add"
        android:clickable="true"
        app:elevation="10dp"
        app:fabSize="mini"
        android:contentDescription="addSchedule"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/currentDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:contentDescription="currentDay"
        android:src="@drawable/ic_1"
        app:elevation="10dp"
        app:fabSize="mini"
        app:tint="@color/add_schedule_background" />

</RelativeLayout>
